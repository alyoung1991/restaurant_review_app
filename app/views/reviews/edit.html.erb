<div class="container">
	<h1>Edit Review</h1>

	<%= form_for @review do |f| %>
		<div class="form-group">
			<%= f.label :restaurant, "Name:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
			  	<%= f.text_field :restaurant %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :rating, "Rating:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
			  	<%= f.range_field :rating, in:1..5, step: 0.1 %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :review, "Review:", class: "col-md-4 control-label" %>
			<div class="col-md-8">
			  	<%= f.text_area :review, size: "60x12" %>
			</div>
		</div>

		<%= f.submit "Save Review", class: "btn btn-default btn-primary" %>
	<% end %>
</div>